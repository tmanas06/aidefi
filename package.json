{
  "name": "aidefi-kadena-dapp",
  "version": "1.0.0",
  "description": "AI-powered DeFi dApp on Kadena with delegated accounts and automated trading",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "build": "pnpm --filter frontend build && pnpm --filter backend build",
    "install:all": "pnpm install && pnpm --filter frontend install && pnpm --filter backend install",
    "setup": "pnpm install:all && pnpm --filter backend prisma:generate && pnpm --filter backend prisma:migrate",
    "start": "concurrently \"pnpm --filter frontend start\" \"pnpm --filter backend start\"",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:testnet": "npx hardhat run scripts/deploy.ts --network testnet",
    "deploy:mainnet": "npx hardhat run scripts/deploy.ts --network chainwebMainnet",
    "test:system": "npx hardhat run scripts/test-system.ts --network hardhat",
    "verify:testnet": "npx hardhat verify --network chainwebTestnet"
  },
  "devDependencies": {
    "@kadena/hardhat-chainweb": "^1.5.1",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^4.9.0",
    "concurrently": "^8.2.2",
    "hardhat": "^2.22.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@kadena/hardhat-kadena-create2": "^1.1.1"
  }
}
